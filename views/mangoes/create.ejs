<div class="container">
    <h1>new mango</h1>
    <form action="/mangoes/create" method="post">
        <div class="row">
            <div class="col-sm-8">
                <div class="row">
                    <div class="col-sm-6 form-group">
                        <input type="text" name="m_Where" id="Where" placeholder="Where" class="form-control">
                    </div>
                    <div class="col-sm-6 ">
                        <input type="text" name="m_Amount" placeholder="100.00" id="Amount" class="form-control">
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 form-group">
                        <textarea name="m_Text" id="Text" cols="30" rows="10" style="width:100%" placeholder="Optional" class="form-control"></textarea>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="row">
                    <div class="form-group col-sm-12">
                        <input type="date" name="m_Date" id="Date" style="float: right; min-width: 11rem;" class="form-control" required>
                    </div>
                </div>
                <input type="checkbox" name="m_Work" id="Work" class="check"> <span> Work</span>

                <span style="float:right">
                    Income
                    <label class="switch">
                        <input type="checkbox" name="m_Income">
                        <span class="slider round"></span>
                      </label>
                </span>

                <select name="m_Category" id="Category" class="form-control" size="10" required>
                    <option value="Rent">Rent</option>
                    <option value="Car Repairs">Car Repairs</option>
                    <option value="Food">Food</option>
                    <option value="Gas">Gas</option>
                    <option value="Clothing">Clothing</option>
                    <option value="Insurance/Registration">Insurance/Registration</option>
                    <option value="Medical">Medical</option>
                    <option value="Taxes">Taxes</option>
                    <option value="Tithing">Tithing</option>
                    <option value="Household Items">Household Items</option>
                    <option value="Personal Hygiene">Personal Hygiene</option>
                    <option value="Savings">Savings</option>
                    <option value="Gifts/Mail">Gifts/Mail</option>
                    <option value="Entertainment">Entertainment</option>
                    <option value="Phone Utility">Phone Utility</option>
                    <option value="Water Utility">Water Utility</option>
                    <option value="Electricity">Electricity</option>
                    <option value="Gas (House)">Gas (House)</option>
                    <option value="Internet">Internet</option>
                    <option value="Other">Other</option>
                </select>
            </div>
        </div>
        <div class="row" style="margin:auto">
            <input type="submit" value="Submit" class="mango-button">
        </div>
    </form>
</div>