  <div class="text-center">
    <h1>Projects</h1>
  </div>

<% if (currentUser && currentUser.isAdmin) { %>
<div class="row more-width">
  <a href="/coconuts/create" class="button add">New Project</a>
</div>
<% } %>


<div class="row more-width">

  <div class="col-2 col-s-12 margin-sm">
    <p class="label">Filters</p>
    <div class="box box-secondary">
        <span class="project-box-title">Category</span>
        <a href="/coconuts?category=Programming" class="project-box-item"><span>Programming</span></a>
        <a href="/coconuts?category=Research" class="project-box-item"><span>Research</span></a>

        <span class="project-box-title">Type</span>
        <a href="/coconuts?ttype=Work" class="project-box-item"><span>Work</span></a>
        <a href="/coconuts?ttype=Student" class="project-box-item"><span>School</span></a>

        <span class="project-box-title">Role</span>
        <a href="/coconuts?rrole=Student" class="project-box-item"><span>Student</span></a>

        <span class="project-box-title">Technology</span>
        <!-- Technology Filters -->
        <% for (t of techs) { %>
          <a href="/coconuts?technologies=<%= t %>" class="project-box-item"><span><%= t %></span></a>
        <% } %>

    </div>
  </div>
  
  <div class="col-10 margin-sm">
    <div class="row">
      <% let iteration = 1; %>
      <% let item_count = coconuts.length; %>
        <% for (c in coconuts) { %>
          <% if (coconuts[c].hhidden == "false" || (currentUser && currentUser.isAdmin)) { %>
            <div class="col-3 col-m-4 col-s-12 margin-sm">
              <div class="project">
                <a href="/coconuts/<%= coconuts[c]._id %>" class="text-decoration-none">
                <div class="my-3" style="width:100%;height:100%;">
                    <div class="project-background"><span style="display:none"><%= coconuts[c].title %></span></div>
                    <div class="project-text">
                        <small class="text-secondary mb-3"><%= coconuts[c].endDate %></small class="text-secondary">
                    <h4><%= coconuts[c].title %></h4>
                    <p><%= coconuts[c].shortDescription %></p>
                    </div>
                </div>
                </a>
              </div>
            </div>
            <% if (iteration % 4 == 0 && coconuts.length - iteration > 1) { %></div><div class="row more-width"><% } %>
              <% iteration++; %>
               <% } %>
               <% } %>
    </div>
  </div>
</div>