    <h1>New Project</h1>
    <form action="<%= urlPrefix %>/coconuts/create" method="POST" class="less-width">
        <div class="row">
            <div class="col-8">
                <div class="row">
                    <div class="col-4">

                        <div class="margin-sm">
                            <label for="title">Title</label>
                            <input type="text" name="title" id="title" class="form-control" required>
                        </div>
                    </div>
                    <div class="col-8">

                        <div class="margin-sm">
                            <label for="headline">Headline</label>
                            <input type="text" name="headline" id="headline" class="form-control" required>
                        </div>

                    </div>
                </div>

                <div class="margin-sm">
                    <label for="situation">Situation</label> 
                    <textarea name="situation" id="situation" rows="2" class="form-control" required></textarea>
                </div>
                
                <div class="margin-sm">
                    <label for="task">Task</label> 
                    <textarea name="task" id="task" rows="2" class="form-control" required></textarea>
                </div>

                <div class="margin-sm">
                    <label for="aaction">Action</label> 
                    <textarea name="aaction" id="aaction" rows="2" class="form-control" required></textarea>
                </div>

                <div class="margin-sm">
                    <label for="rresult">Result</label> 
                    <textarea name="rresult" id="rresult" rows="2" class="form-control" required></textarea>
                </div>
                
                <div class="margin-sm">
                    <label for="shortDescription">Short Description</label> 
                    <textarea name="shortDescription" id="shortDescription" rows="2" class="form-control" required ></textarea>
                </div>

                <div class="row">
                    <div class="col-6">
                        <div class="margin-sm">
                            <label for="llocation">Location</label>
                            <input type="text" name="llocation" id="llocation" class="form-control">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="margin-sm">
                            <label for="rrole">Role</label>
                            <input type="text" name="rrole" id="rrole" class="form-control">
                        </div>
                    </div>
                </div>

                
            </div>
            <div class="col-4">
                <div class="row">
                    <div class="col-6 margin-sm">
                        <label for="startDate">Start Date</label>
                        <input type="date" name="startDate" id="startDate" required>
                    </div>

                    <div class="col-6 margin-sm">
                        <label for="endDate">End Date</label>
                        <input type="date" name="endDate" id="endDate" required>
                    </div>
                </div>
                
                <div class="">
                    <div class="margin-sm">
                        <label for="technologies[]">Technologies</label>                      
                        <select name="technologies[]" id="technologies" class="form-control" style="resize:vertical" multiple size="6">
                            <% for (t of technologies) { %>
                                <option value="<%= t.name.replace(' ', '_') %>"><%= decodeURI(t.name) %></option>
                            <% } %> 
                        </select>
                    </div>
                    <div class="margin-sm">
                        <span class="button add full-width">Add new technology</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="margin-sm">
                            <label for="ttime">Time (hours)</label>
                            <input type="number" name="ttime" id="ttime" max="499" step=".5" min="0" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 margin-sm">
                        <label for="">Hidden</label>
                        <div class="input-box">
                            <div class="row margin-sm">
                                <div class="col-10">
                                    <label for="hiddenTrue">Yes</label>
                                </div>
                                <div class="col-2">
                                    <input type="radio" name="hhidden" id="hiddenTrue" value="true" class="form-check-input">
                                </div>
                            </div>
                            <div class="row margin-sm">
                                <div class="col-10">
                                    <label for="hiddenTrue">No</label>
                                </div>
                                <div class="col-2">
                                    <input type="radio" name="hhidden" id="hiddenTrue" value="false" class="form-check-input" checked>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class=" margin-sm">
                    <label for="uurl">Live URL</label>
                    <input type="text" name="uurl" id="url" class="form-control">
                </div>
                <div class="row margin-sm">
                    <div class="col-12">
                        <div class="">
                            <label for="video">Video URL</label>
                            <input type="text" name="video" id="video" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 margin-sm">
                        <div class="">
                            <label for="ttype">Type of Project</label>
                            <input type="text" name="ttype" id="ttype" placeholder="Work Project" class="form-control">
                        </div>
                    </div>
                    <div class="col-6 margin-sm">
                        <div class="">
                            <label for="category">Project Classification</label>
                            <input type="text" name="category" id="category" placeholder="Programming, Research, etc." class="form-control">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <input type="submit" value="Submit" class="btn btn-primary">
    </form>


    <form action="">
        <div class="row">
            <div class="col-12">
                    <label for="files">Files</label><span style="float: right;"><p class="btn btn btn-outline-primary" id="newFileButton">Add Another File</p></span>
                    <input type="file" name="files" id="files">         
            </div>
        </div>
    </form>

<!-- The Modal -->
<div class="modal" id="myModal">
    <div class="modal-dialog">
      <div class="modal-content">
  
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">New Technology</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
  
        <!-- Modal body -->
        <div class="modal-body">
            <label for="techName">Name</label>
          <input type="text" name="techName" id="newTech" class="form-control">
        </div>
        <button id="newTechBtn" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </div>

  <script>
      $("#newTechBtn").click(function() {
          let tech = $("#newTech").val();
          if (!tech == "") {
            $.post({
                url: "<%= urlPrefix %>/technologies",
                success: () => {
                    $("#newTechBtn").toggleClass("btn-primary");
                    $("#newTechBtn").toggleClass("btn-success");
                    $("#newTechBtn").html("Success!");
                    setTimeout(function(){
                        $('#myModal').modal('toggle');
                        $("#technologies").append(`<option value="${$("#newTech").val().replaceAll(" ", "_")}">${$("#newTech").val()}</option>`)
                    }, 2000);
                },
                error: (err) => {
                    console.log(err);
                },
                data: {"name": $("#newTech").val()}
            })
          }
      });
  </script>