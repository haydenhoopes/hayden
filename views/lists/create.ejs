<h1>New List</h1>
<form action="/lists/create" method="post" name="list-form">
    <input type="date" name="l_LastUpdated" style="display: none;">
    <input type="text" name="l_Title" id="title" placeholder="Title">
    <div>
        <div class="input-with-button">
            <input class="X_removable" type="text" name="l_Items" placeholder="Write item here">
        </div>
    </div>
    <input class="button add" type="submit" value="Save List">
</form>


<script src="/js/lists/addItem.js"></script>